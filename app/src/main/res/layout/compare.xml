<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="407dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="차량비교"
        android:textSize="40dp"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="67dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="first car"
        android:textSize="18dp" />

    <Spinner
        android:id="@+id/comSpinner1"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:background="@android:drawable/spinner_background"></Spinner>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="second car"
        android:textSize="18dp" />


    <Spinner
        android:id="@+id/comSpinner2"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:background="@android:drawable/spinner_background"></Spinner>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="first car information            second car information"
        android:textSize="14dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/fListView"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp">


            </ListView>

            <ListView
                android:id="@+id/s_ListView"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp">


            </ListView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="300dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview1"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:src="@drawable/kona" />

                <ImageView
                    android:id="@+id/imageview2"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/kona" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>